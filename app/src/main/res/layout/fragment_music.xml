<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="?attr/actionBarSize"
                tools:context=".MainActivity$HomeFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutMetadata"
            android:paddingBottom="8dp"
            android:background="#60000000">

        <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/imageArtWork"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:text="Open your Music Player"
                android:id="@+id/textTitle"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/imageArtWork"
                android:layout_toEndOf="@+id/imageArtWork"
                android:layout_alignParentTop="true"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material"
                android:text=""
                android:id="@+id/textAlbum"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/imageArtWork"
                android:layout_toEndOf="@+id/imageArtWork"
                android:layout_below="@+id/textTitle"
                android:textColor="#fff"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material"
                android:text=""
                android:id="@+id/textArtist"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/imageArtWork"
                android:layout_toEndOf="@+id/imageArtWork"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:layout_below="@+id/textAlbum"
                />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/imageArtWork"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/textArtist">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:id="@+id/buttonPrev"
                       android:src="@drawable/ic_skip_previous"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_play"
                       android:id="@+id/buttonPlay"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:id="@+id/buttonNext"
                       android:src="@drawable/ic_skip_next"/>

        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>
